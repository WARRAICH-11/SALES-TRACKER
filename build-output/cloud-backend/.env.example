# Sales Tracker Cloud Backend - Environment Configuration
# Copy this file to .env and update with your production values

# JWT Secret Key - Change this to a strong random string in production
SECRET_KEY=change-this-super-secret-key-in-production

# AES-256-GCM encryption key for sync payloads (base64 encoded 32 bytes)
# Generate with: python -c "import os,base64;print(base64.b64encode(os.urandom(32)).decode())"
SYNC_AES_KEY_BASE64=your-base64-32-bytes-key-here

# Admin credentials for dashboard access
ADMIN_USER=admin
ADMIN_PASS=admin123

# Database URL (optional, defaults to SQLite)
# DATABASE_URL=sqlite:///./sales_tracker.db
# DATABASE_URL=postgresql://user:pass@localhost/sales_tracker

# Server configuration
HOST=0.0.0.0
PORT=8000

# CORS settings (optional)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting (requests per minute per IP)
RATE_LIMIT=600

# Logging level
LOG_LEVEL=INFO
